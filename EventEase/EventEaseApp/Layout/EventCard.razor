@using EventEaseApp.Models

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Event.Title</h5>
        <p class="card-text">@Event.Description</p>
        <p><strong>Date:</strong> @Event.Date.ToShortDateString()</p>
        <p><strong>Location:</strong> @Event.Location</p>

        <label>Tickets:</label>
        <input type="number" min="1" @bind="Tickets" />

        <button class="btn btn-primary" @onclick="Register">Register</button>
    </div>
</div>

@code {
    [Parameter] public Event Event { get; set; } = default!;
    [Parameter] public EventCallback<int> OnRegister { get; set; }

    private int Tickets { get; set; } = 1;

    private async Task Register()
    {
        if (Tickets > 0)
        {
            await OnRegister.InvokeAsync(Tickets);
        }
    }
}
